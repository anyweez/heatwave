<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItemStyle"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <!-- Graphical gauge that appears on the left side of the row. -->
    <TextView
        android:id="@+id/contact_gauge"
        style="@style/ContactGauge"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true" />

	<TextView
    	android:id="@+id/contact_name"
        style="@style/ListItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/contact_gauge" />

	<TextView
		android:id="@+id/contact_subtitle"
		style="@style/ListItemSubtitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_below="@id/contact_name"
		android:layout_toRightOf="@id/contact_gauge" />

    <TextView
        android:id="@+id/contact_note"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        style="@style/ListItemNote" 
        android:layout_alignParentRight="true" 
        android:layout_alignParentTop="true" />
         
</RelativeLayout>